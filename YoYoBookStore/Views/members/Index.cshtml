@model IEnumerable<YoYoBookStore.Models.member>

@{
    ViewBag.Title = "幼幼書坊-會員登入";
}
<h1></h1>
<div class="breadcrumb alert-warning ">
    <h4><strong>會員登入</strong></h4>
    <p>幼幼書坊提供會員機制，讓您借書更方便。</p>
</div>
<div class="panel panel-default">
    <table class="table table-striped  table-hover">
        <div class=" panel-heading ">會員名單</div>
        <tr class=" alert alert-warning">
            <th>
                編號
            </th>
            <th>
                姓名
            </th>
            <th>
                性別
            </th>
            <th>
                聯絡電話
            </th>
            <th>
                選項
            </th>
        </tr>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            <tr class="panel-heading">
                <td>
                    @{
            i++;
            Output.WriteLine(i);
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tel)
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { id = item.id }) |
                    @Html.ActionLink("明細", "Details", new { id = item.id }) |
                    @Html.ActionLink("刪除", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </table>



</div>
